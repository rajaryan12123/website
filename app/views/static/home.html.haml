= render 'shared/breadcrumbs', data: nil
#myCarousel.carousel
  %ol.carousel-indicators
    %li.active{data: {target: "#myCarousel", "slide-to" => 0}}   
    %li{data: {target: "#myCarousel", "slide-to" => 1}}   
  .carousel-inner
    .item.active
      = link_to image_tag("Banner 2.jpg"), "about-us" 
    .item
      = link_to image_tag("Banner 1.bmp"), "about-us"
  %a.carousel-control.left{"data-slide" => "prev", :href => "#myCarousel"}
    %i.icon-angle-left
  %a.carousel-control.right{"data-slide" => "next", :href => "#myCarousel"}
    %i.icon-angle-right
